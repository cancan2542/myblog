---
interface Props {
  tag: string;
  date: string;
  title: string;
  description: string;
  image: string;
  category: string;
}

const { tag, date, title, description, image, category } = Astro.props;
---

<article class="blog-card" aria-label={title}>
  <div class="card-image">
    <img src={image} alt={title} />
    <div class="card-tag" aria-hidden="true">{tag}</div>
  </div>
  <div class="card-content">
    <div class="card-meta">
      <span class="card-category">{category}</span>
      <time class="card-date" datetime={date}>{date}</time>
    </div>
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</article>

<style>
  .blog-card {
    background: #fff;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .blog-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .card-image {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
    background: var(--color-background-dark);
  }

  .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .blog-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-tag {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--color-primary);
    color: #fff;
    padding: 4px 10px;
    font-size: 0.7rem;
    font-weight: 600;
    border-radius: var(--border-radius-sm);
    text-transform: uppercase;
  }

  .card-content {
    padding: 16px;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8rem;
    margin-bottom: 10px;
  }

  .card-category {
    background: var(--color-accent);
    color: #fff;
    padding: 3px 8px;
    font-weight: 600;
    font-size: 0.7rem;
    border-radius: var(--border-radius-sm);
  }

  .card-date {
    color: var(--color-text-muted);
    font-size: 0.8rem;
  }

  .card-content h3 {
    margin: 8px 0;
    font-size: 1rem;
    line-height: 1.4;
    font-weight: 600;
    color: var(--color-primary);
  }

  .card-content p {
    margin: 8px 0 0;
    font-size: 0.85rem;
    line-height: 1.5;
    color: var(--color-text-muted);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
</style>
