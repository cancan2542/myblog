---
interface Props {
  categories?: string[];
  activeCategory?: string;
  onCategoryChange?: (category: string) => void;
}

const { categories = ['All', 'Spots', 'Gear', 'Tips', 'Review'], activeCategory = 'All' } = Astro.props;
---

<div class="category-tabs" role="tablist" aria-label="記事カテゴリフィルター">
  {categories.map((category) => (
    <button
      role="tab"
      aria-selected={category === activeCategory}
      class={`tab-button ${category === activeCategory ? 'active' : ''}`}
      data-category={category}
    >
      {category}
    </button>
  ))}
</div>

<script>
  import { initCategoryFilter } from '../utils/categoryFilter';
  initCategoryFilter();
</script>

<style>
  .category-tabs {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin: 1.5rem 0;
    flex-wrap: wrap;
  }

  .tab-button {
    padding: 8px 20px;
    border: none;
    background: #fff;
    cursor: pointer;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.2s;
    font-family: var(--font-sans);
    border-radius: 20px;
    color: var(--color-text-muted);
    box-shadow: var(--shadow-sm);
  }

  .tab-button:hover {
    background: var(--color-background-dark);
    color: var(--color-primary);
  }

  .tab-button.active {
    background: var(--color-primary);
    color: #fff;
  }
</style>
