---
interface Props {
  categories?: string[];
  activeCategory?: string;
  onCategoryChange?: (category: string) => void;
}

const { categories = ['All', 'Work', 'Lifestyle', 'Learning'], activeCategory = 'All' } = Astro.props;
---

<div class="category-tabs" role="tablist" aria-label="記事カテゴリフィルター">
  {categories.map((category) => (
    <button
      role="tab"
      aria-selected={category === activeCategory}
      class={`tab-button ${category === activeCategory ? 'active' : ''}`}
      data-category={category}
    >
      {category}
    </button>
  ))}
</div>

<script>
  import { initCategoryFilter } from '../utils/categoryFilter';
  initCategoryFilter();
</script>

<style>
  .category-tabs {
    display: flex;
    justify-content: center;
    gap: 12px;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .tab-button {
    padding: 8px 16px;
    border: var(--border-medium);
    background: var(--color-background);
    cursor: pointer;
    font-weight: bold;
    font-size: 0.9rem;
    transition: all 0.2s;
    font-family: var(--font-retro);
  }

  .tab-button:hover {
    background: #f0f0f0;
    transform: scale(1.05);
  }

  .tab-button.active {
    background: var(--color-border);
    color: var(--color-background);
  }
</style>
