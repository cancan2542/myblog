<div class="trip-status" data-component="player-status" role="region" aria-label="トリップ統計">
  <div class="trip-icon">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <rect x="2" y="8" width="20" height="10" rx="2" stroke="#F172A3" stroke-width="2"/>
      <circle cx="7" cy="18" r="2" stroke="#F172A3" stroke-width="2"/>
      <circle cx="17" cy="18" r="2" stroke="#F172A3" stroke-width="2"/>
      <path d="M5 8V6a2 2 0 012-2h10a2 2 0 012 2v2" stroke="#F172A3" stroke-width="2"/>
    </svg>
  </div>
  <div class="stats" role="group" aria-label="探索統計">
    <div class="stat-item">
      <span class="stat-label" id="label-daily">TODAY</span>
      <span class="stat-value" data-daily="0" aria-labelledby="label-daily" aria-live="polite">0</span>
    </div>
    <div class="stat-divider"></div>
    <div class="stat-item">
      <span class="stat-label" id="label-total">TOTAL</span>
      <span class="stat-value" data-total="0" aria-labelledby="label-total" aria-live="polite">0</span>
      <span class="stat-unit">km</span>
    </div>
    <div class="stat-divider"></div>
    <div class="stat-item">
      <span class="stat-label" id="label-level">Lv.</span>
      <span class="stat-value" data-level="0" aria-labelledby="label-level" aria-live="polite">0</span>
    </div>
  </div>
  <div class="distance-bar" role="progressbar" aria-label="次のレベルまでの距離" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
    <div class="distance-fill" data-exp-percent="0" style="width: 0%"></div>
  </div>
</div>

<script>
  import { initPlayerStatus } from '../utils/playerStatusManager';
  initPlayerStatus();
</script>

<style>
  .trip-status {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #fff;
    padding: 8px 16px;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    font-family: var(--font-sans);
  }

  .trip-icon {
    color: var(--color-accent);
    display: flex;
    align-items: center;
  }

  .stats {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .stat-item {
    display: flex;
    align-items: baseline;
    gap: 4px;
  }

  .stat-label {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    font-weight: 500;
    text-transform: uppercase;
  }

  .stat-value {
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .stat-unit {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 16px;
    background: var(--color-border);
  }

  .distance-bar {
    width: 60px;
    height: 4px;
    background: var(--color-background-dark);
    border-radius: 2px;
    overflow: hidden;
  }

  .distance-fill {
    height: 100%;
    background: var(--color-accent);
    border-radius: 2px;
    transition: width 0.3s ease;
  }

  /* Mobile: 〜767px */
  @media (max-width: 767px) {
    .trip-status {
      flex-wrap: wrap;
      justify-content: center;
      padding: 8px 12px;
      gap: 8px;
    }

    .stats {
      gap: 8px;
    }

    .stat-label {
      font-size: 0.65rem;
    }

    .stat-value {
      font-size: 0.85rem;
    }

    .distance-bar {
      width: 100%;
      order: 1;
      margin-top: 4px;
    }
  }
</style>
