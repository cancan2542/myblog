---
interface Props {
  title: string;
  image: string;
  date: string;
  category: string;
  tag: string;
}

const { title, image, date, category, tag } = Astro.props;
---

<header class="article-header">
  {image && image !== '' && (
    <div class="article-image-wrapper">
      <img src={image} alt={title} class="article-image" />
      <div class="article-tag">{tag}</div>
    </div>
  )}
  <div class="article-meta">
    <div class="meta-badges">
      <span class="category-badge">{category}</span>
      <time class="date-text" datetime={date}>{date}</time>
    </div>
    <h1 class="article-title">{title}</h1>
  </div>
</header>

<style>
  .article-header {
    margin-bottom: 2rem;
  }

  .article-image-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 1.5rem;
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-md);
  }

  .article-image {
    width: 100%;
    height: auto;
    display: block;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .article-tag {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--color-primary);
    color: #fff;
    padding: 6px 12px;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--border-radius-sm);
    text-transform: uppercase;
  }

  .article-meta {
    background: #fff;
    border-radius: var(--border-radius);
    padding: 1.5rem;
    box-shadow: var(--shadow-sm);
  }

  .meta-badges {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .category-badge {
    background: var(--color-accent);
    color: #fff;
    padding: 4px 12px;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: var(--border-radius-sm);
  }

  .date-text {
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }

  .article-title {
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.4;
    color: var(--color-primary);
    margin: 0;
    font-family: var(--font-display);
  }

  /* Mobile: ã€œ767px */
  @media (max-width: 767px) {
    .article-header {
      margin-bottom: 1.5rem;
    }

    .article-image-wrapper {
      margin-bottom: 1rem;
      border-radius: var(--border-radius-sm);
    }

    .article-tag {
      top: 8px;
      left: 8px;
      padding: 4px 8px;
      font-size: 0.7rem;
    }

    .article-meta {
      padding: 1rem;
    }

    .meta-badges {
      gap: 0.75rem;
      margin-bottom: 0.75rem;
    }

    .category-badge {
      padding: 3px 8px;
      font-size: 0.7rem;
    }

    .date-text {
      font-size: 0.8rem;
    }

    .article-title {
      font-size: 1.25rem;
      line-height: 1.5;
    }
  }
</style>
