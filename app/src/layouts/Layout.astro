---
import "../styles/global.css";
import PlayerStatus from "../components/PlayerStatus.astro";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="CanPark - スポーツカーでもできる、車中泊のススメ。" />
    <title>{title} | CanPark</title>
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet" />
    <GoogleAnalytics />
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-container">
        <a href="/" class="logo">
          <svg class="logo-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="2" y="8" width="20" height="10" rx="2" stroke="currentColor" stroke-width="2"/>
            <circle cx="7" cy="18" r="2" stroke="currentColor" stroke-width="2"/>
            <circle cx="17" cy="18" r="2" stroke="currentColor" stroke-width="2"/>
            <path d="M5 8V6a2 2 0 012-2h10a2 2 0 012 2v2" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span>CanPark</span>
        </a>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
    </nav>

    <div class="header-status-bar">
      <PlayerStatus />
    </div>

    <main class="main-content">
      <div class="container">
        <slot />
      </div>
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-brand">CanPark</div>
        <p class="footer-tagline">スポーツカーでもできる、車中泊のススメ。</p>
        <p class="footer-copyright">&copy; 2026 CanPark. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<script>
  // ページビュートラッキングはPlayerStatus.astroで行われます
  // playerStatsUpdatedイベントは互換性のため残しています
</script>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    background: var(--color-background);
    color: var(--color-text);
    line-height: 1.7;
  }

  .navbar {
    background: var(--color-primary);
    color: #fff;
    padding: 1rem 0;
    box-shadow: var(--shadow-sm);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    text-decoration: none;
    font-family: var(--font-display);
  }

  .logo:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .logo-icon {
    color: var(--color-accent);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color 0.2s;
    font-size: 0.95rem;
    font-weight: 500;
  }

  .nav-links a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .main-content {
    min-height: calc(100vh - 280px);
    padding: 2.5rem 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer {
    background: var(--color-primary);
    color: #fff;
    padding: 2.5rem 0;
    margin-top: 3rem;
    text-align: center;
  }

  .footer-brand {
    font-size: 1.25rem;
    font-weight: 700;
    font-family: var(--font-display);
    margin-bottom: 0.5rem;
  }

  .footer-tagline {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.9rem;
    margin: 0.5rem 0;
  }

  .footer-copyright {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.8rem;
    margin-top: 1rem;
  }

  .header-status-bar {
    background: var(--color-background-dark);
    padding: 0.75rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
    display: flex;
    justify-content: flex-end;
  }

  .header-status-bar :global(.player-status) {
    margin: 0;
  }

  @media (max-width: 768px) {
    .nav-container {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .logo {
      font-size: 1.1rem;
    }

    .header-status-bar {
      padding: 0.5rem 1rem;
      justify-content: center;
    }
  }
</style>
