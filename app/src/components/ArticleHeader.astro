---
interface Props {
  title: string;
  image: string;
  date: string;
  category: string;
  tag: string;
}

const { title, image, date, category, tag } = Astro.props;
---

<div class="article-header">
  {image && image !== '' && (
    <div class="article-image-wrapper">
      <img src={image} alt={title} class="article-image" />
      <div class="article-tag">{tag}</div>
    </div>
  )}
  <div class="article-meta-box">
    <div class="article-title">{title}</div>
    
    <div class="article-info">
      <div class="info-row">
        <span class="info-label">CATEGORY</span>
        <span class="info-value category-badge">{category}</span>
      </div>
      <div class="info-row">
        <span class="info-label">DATE</span>
        <span class="info-value">{date}</span>
      </div>
    </div>
  </div>
</div>

<style>
  .article-header {
    margin-bottom: 2rem;
  }

  .article-image-wrapper {
    position: relative;
    width: 100%;
    margin-bottom: 1.5rem;
    border: var(--border-thick);
    background: #f0f0f0;
    box-shadow: var(--shadow-lg);
  }

  .article-image {
    width: 100%;
    height: auto;
    display: block;
  }

  .article-tag {
    position: absolute;
    top: 12px;
    left: 12px;
    background: var(--color-border);
    color: var(--color-background);
    padding: 4px 8px;
    font-size: 0.75rem;
    font-weight: bold;
    border: 2px solid #000;
    font-family: var(--font-mono);
  }

  .article-meta-box {
    border: var(--border-thick);
    background: var(--color-background);
    padding: 1.5rem;
    box-shadow: var(--shadow-lg);
  }

  .article-title {
    font-size: 1.8rem;
    font-weight: bold;
    margin-bottom: 1rem;
    line-height: 1.3;
    border-bottom: var(--border-thick);
    padding-bottom: 1rem;
  }

  .article-info {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  .info-row {
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
    border: 2px solid var(--color-background-dark);
    background: #fafafa;
  }

  .info-label {
    font-size: 0.7rem;
    font-weight: bold;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    margin-bottom: 0.3rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .info-value {
    font-size: 0.95rem;
    color: var(--color-text);
    font-weight: 500;
  }

  .category-badge {
    background: var(--color-background-dark);
    padding: 2px 6px;
    border: var(--border-thin);
    display: inline-block;
    width: fit-content;
  }

  @media (max-width: 768px) {
    .article-title {
      font-size: 1.4rem;
    }

    .article-meta-box {
      padding: 1rem;
    }

    .article-info {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
  }
</style>
