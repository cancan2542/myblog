---
interface Props {
  tag: string;
  date: string;
  title: string;
  description: string;
  image: string;
  category: string;
}

const { tag, date, title, description, image, category } = Astro.props;
---

<article class="blog-card" aria-label={title}>
  <div class="card-image">
    <img src={image} alt={title} />
    <div class="card-tag" aria-hidden="true">{tag}</div>
  </div>
  <div class="card-content">
    <div class="card-meta">
      <span class="card-category">{category}</span>
      <time class="card-date" datetime={date}>{date}</time>
    </div>
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</article>

<style>
  .blog-card {
    border: var(--border-medium);
    background: var(--color-background);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .blog-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.3);
  }

  .card-image {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
    background: #f0f0f0;
  }

  .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-tag {
    position: absolute;
    top: 8px;
    left: 8px;
    background: var(--color-border);
    color: var(--color-background);
    padding: 2px 6px;
    font-size: 0.7rem;
    font-weight: bold;
    border: 1px solid #000;
  }

  .card-content {
    padding: 12px;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    margin-bottom: 8px;
  }

  .card-category {
    background: var(--color-background-dark);
    border: var(--border-thin);
    padding: 2px 6px;
    font-weight: bold;
  }

  .card-date {
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .card-content h3 {
    margin: 8px 0;
    font-size: 0.95rem;
    line-height: 1.3;
    font-weight: bold;
  }

  .card-content p {
    margin: 6px 0;
    font-size: 0.8rem;
    line-height: 1.4;
    color: var(--color-text);
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
</style>
