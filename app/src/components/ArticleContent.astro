---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<article class="article-content">
  <div class="content-box" set:html={content} />
</article>

<style is:global>
  .article-content {
    margin: 2rem 0;
  }

  .content-box {
    background: #fff;
    border-radius: var(--border-radius);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    line-height: 1.8;
  }

  .content-box h1,
  .content-box h2,
  .content-box h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
    font-family: var(--font-display);
  }

  .content-box h1 {
    font-size: 1.6rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-background-dark);
  }

  .content-box h2 {
    font-size: 1.3rem;
    padding-bottom: 0.4rem;
    border-bottom: 1px solid var(--color-background-dark);
  }

  .content-box h3 {
    font-size: 1.1rem;
  }

  .content-box p {
    margin: 1rem 0;
    color: var(--color-text);
  }

  .content-box ul,
  .content-box ol {
    margin: 1rem 0;
    margin-left: 1.5rem;
  }

  .content-box li {
    margin: 0.5rem 0;
    color: var(--color-text);
  }

  .content-box code {
    background: var(--color-background-dark);
    padding: 0.2em 0.5em;
    border-radius: var(--border-radius-sm);
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
    font-size: 0.9em;
  }

  .content-box pre {
    background: #1e293b;
    color: #e2e8f0;
    padding: 1.5rem;
    border-radius: var(--border-radius);
    overflow-x: auto;
    margin: 1.5rem 0;
    font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .content-box pre code {
    background: none;
    padding: 0;
    color: inherit;
  }

  .content-box strong {
    font-weight: 600;
    color: var(--color-primary);
  }

  .content-box em {
    font-style: italic;
  }

  .content-box a {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid var(--color-accent);
    transition: opacity 0.2s;
  }

  .content-box a:hover {
    opacity: 0.7;
  }

  .content-box blockquote {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    background: var(--color-background-dark);
    border-left: 4px solid var(--color-accent);
    border-radius: 0 var(--border-radius) var(--border-radius) 0;
  }

  .content-box blockquote p {
    margin: 0;
    color: var(--color-text-muted);
  }

  .content-box img {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    margin: 1rem 0;
  }

  @media (max-width: 768px) {
    .content-box {
      padding: 1.5rem;
    }

    .content-box h1 {
      font-size: 1.3rem;
    }

    .content-box h2 {
      font-size: 1.15rem;
    }

    .content-box h3 {
      font-size: 1rem;
    }
  }
</style>
