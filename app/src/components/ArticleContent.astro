---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<article class="article-content">
  <div class="content-box" set:html={content} />
</article>

<style is:global>
  .article-content {
    margin: 2rem 0;
  }

  .content-box {
    border: 3px solid #333;
    background: #fff;
    padding: 2rem;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
    line-height: 1.8;
  }

  .content-box h1,
  .content-box h2,
  .content-box h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid #333;
    padding-bottom: 0.5rem;
  }

  .content-box h1 {
    font-size: 1.8rem;
  }

  .content-box h2 {
    font-size: 1.4rem;
  }

  .content-box h3 {
    font-size: 1.1rem;
  }

  .content-box p {
    margin: 1rem 0;
    color: #333;
  }

  .content-box ul,
  .content-box ol {
    margin: 1rem 0;
    margin-left: 2rem;
  }

  .content-box li {
    margin: 0.5rem 0;
  }

  .content-box code {
    background: #f5f5f5;
    padding: 0.2em 0.4em;
    border: 1px solid #999;
    border-radius: 2px;
    font-family: 'Courier New', Courier, monospace;
  }

  .content-box pre {
    background: #000;
    color: #0f0;
    padding: 1.5rem;
    border: 3px solid #333;
    border-radius: 0;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.9rem;
    line-height: 1.4;
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
  }

  .content-box pre code {
    background: none;
    border: none;
    padding: 0;
    color: #0f0;
  }

  .content-box strong {
    font-weight: bold;
    color: #000;
  }

  .content-box em {
    font-style: italic;
  }

  .content-box a {
    color: #0066cc;
    text-decoration: underline;
    border-bottom: 2px dotted currentColor;
  }

  .content-box a:hover {
    background: #ffff00;
    color: #000;
  }

  @media (max-width: 768px) {
    .content-box {
      padding: 1.5rem;
    }

    .content-box h1 {
      font-size: 1.4rem;
    }

    .content-box h2 {
      font-size: 1.1rem;
    }

    .content-box h3 {
      font-size: 1rem;
    }
  }
</style>
