---
import Layout from '../layouts/Layout.astro';
import PlayerStatus from '../components/PlayerStatus.astro';
import CategoryTabs from '../components/CategoryTabs.astro';
import BlogCard from '../components/BlogCard.astro';
import { getArticles } from '../lib/microcms';
import { formatDate } from '../utils/dateFormatter';
import { DEFAULT_ARTICLE_IMAGE, SITE_NAME, SITE_DESCRIPTION } from '../constants';

const title = "ホーム";

// microCMSから記事を取得
const articles = await getArticles();

// 記事データを変換
const posts = articles.map((article) => ({
  id: article.id,
  title: article.title,
  description: article.description || '',
  image: article.image?.url || DEFAULT_ARTICLE_IMAGE,
  date: formatDate(article.publishedAt || article.createdAt),
  category: article.category?.name || 'Uncategorized',
  tag: article.tag || article.category?.name?.toUpperCase() || 'GENERAL',
}));

// カテゴリ一覧を取得
const categories = ['All', ...new Set(posts.map(p => p.category))];
---

<Layout title={title}>
  <!-- Hero Section -->
  <section class="hero">
    <h1 class="hero-title">{SITE_NAME}</h1>
    <p class="hero-description">{SITE_DESCRIPTION}</p>
  </section>

  <!-- Category Tabs -->
  <CategoryTabs categories={categories} />

  <!-- Blog Posts Grid -->
  <section class="posts-grid">
    {posts.length > 0 ? (
      posts.map((post) => (
        <div data-category={post.category}>
          <a href={`/posts/${post.id}`} class="post-link">
            <BlogCard
              tag={post.tag}
              date={post.date}
              title={post.title}
              description={post.description}
              image={post.image}
              category={post.category}
            />
          </a>
        </div>
      ))
    ) : (
      <div class="empty-state">
        <p>まだ記事がありません。</p>
      </div>
    )}
  </section>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 1.5rem 1rem;
    margin-bottom: 0.5rem;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 0.75rem;
    font-family: var(--font-display);
    letter-spacing: -0.02em;
  }

  .hero-description {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .post-link {
    text-decoration: none;
    display: block;
  }

  .empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 4rem 2rem;
    background: #fff;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
  }

  .empty-state p {
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
