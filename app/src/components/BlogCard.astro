---
interface Props {
  tag: string;
  date: string;
  title: string;
  description: string;
  image: string;
  category: string;
}

const { tag, date, title, description, image, category } = Astro.props;
---

<div class="blog-card">
  <div class="card-image">
    <img src={image} alt={title} />
    <div class="card-tag">{tag}</div>
  </div>
  <div class="card-content">
    <div class="card-meta">
      <span class="card-category">{category}</span>
      <span class="card-date">{date}</span>
    </div>
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .blog-card {
    border: 2px solid #333;
    background: #fff;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .blog-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.3);
  }

  .card-image {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
    background: #f0f0f0;
  }

  .card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-tag {
    position: absolute;
    top: 8px;
    left: 8px;
    background: #333;
    color: #fff;
    padding: 2px 6px;
    font-size: 0.7rem;
    font-weight: bold;
    border: 1px solid #000;
  }

  .card-content {
    padding: 12px;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    margin-bottom: 8px;
  }

  .card-category {
    background: #e0e0e0;
    border: 1px solid #999;
    padding: 2px 6px;
    font-weight: bold;
  }

  .card-date {
    color: #666;
    font-family: 'Courier New', monospace;
  }

  .card-content h3 {
    margin: 8px 0;
    font-size: 0.95rem;
    line-height: 1.3;
    font-weight: bold;
  }

  .card-content p {
    margin: 6px 0;
    font-size: 0.8rem;
    line-height: 1.4;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
</style>
