---
interface Props {
  content: string;
}

const { content } = Astro.props;
---

<article class="article-content">
  <div class="content-box" set:html={content} />
</article>

<style is:global>
  .article-content {
    margin: 2rem 0;
  }

  .content-box {
    border: var(--border-thick);
    background: var(--color-background);
    padding: 2rem;
    box-shadow: var(--shadow-lg);
    line-height: 1.8;
  }

  .content-box h1,
  .content-box h2,
  .content-box h3 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    border-bottom: var(--border-medium);
    padding-bottom: 0.5rem;
  }

  .content-box h1 {
    font-size: 1.8rem;
  }

  .content-box h2 {
    font-size: 1.4rem;
  }

  .content-box h3 {
    font-size: 1.1rem;
  }

  .content-box p {
    margin: 1rem 0;
    color: var(--color-text);
  }

  .content-box ul,
  .content-box ol {
    margin: 1rem 0;
    margin-left: 2rem;
  }

  .content-box li {
    margin: 0.5rem 0;
  }

  .content-box code {
    background: #f5f5f5;
    padding: 0.2em 0.4em;
    border: var(--border-thin);
    border-radius: 2px;
    font-family: var(--font-mono);
  }

  .content-box pre {
    background: var(--color-terminal-bg);
    color: var(--color-terminal-text);
    padding: 1.5rem;
    border: var(--border-thick);
    border-radius: 0;
    overflow-x: auto;
    margin: 1.5rem 0;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    line-height: 1.4;
    box-shadow: var(--shadow-inset);
  }

  .content-box pre code {
    background: none;
    border: none;
    padding: 0;
    color: var(--color-terminal-text);
  }

  .content-box strong {
    font-weight: bold;
    color: #000;
  }

  .content-box em {
    font-style: italic;
  }

  .content-box a {
    color: var(--color-link);
    text-decoration: underline;
    border-bottom: 2px dotted currentColor;
  }

  .content-box a:hover {
    background: var(--color-highlight);
    color: #000;
  }

  @media (max-width: 768px) {
    .content-box {
      padding: 1.5rem;
    }

    .content-box h1 {
      font-size: 1.4rem;
    }

    .content-box h2 {
      font-size: 1.1rem;
    }

    .content-box h3 {
      font-size: 1rem;
    }
  }
</style>
