---
import BlogCard from './BlogCard.astro';

interface BlogPost {
  id: string;
  title: string;
  description: string;
  image: string;
  date: string;
  category: string;
  tag: string;
}

interface Props {
  posts: BlogPost[];
}

const { posts } = Astro.props;
---

<section class="related-posts">
  <div class="section-title">RELATED POSTS</div>
  
  {posts.length > 0 ? (
    <div class="posts-grid">
      {posts.map((post) => (
        <div>
          <a href={`/posts/${post.id}`} style="text-decoration: none;">
            <BlogCard
              tag={post.tag}
              date={post.date}
              title={post.title}
              description={post.description}
              image={post.image}
              category={post.category}
            />
          </a>
        </div>
      ))}
    </div>
  ) : (
    <div class="no-posts">関連記事はありません</div>
  )}
</section>

<style>
  .related-posts {
    margin-top: 3rem;
    padding: 2rem 0;
    border-top: var(--border-thick);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 2rem;
    padding: 1rem;
    background: var(--color-terminal-bg);
    color: var(--color-background);
    border: var(--border-thick);
    font-family: var(--font-mono);
    letter-spacing: 2px;
    box-shadow: var(--shadow-lg);
    display: inline-block;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 1.5rem;
  }

  .no-posts {
    text-align: center;
    padding: 2rem;
    background: #f5f5f5;
    border: 2px dashed #999;
    color: var(--color-text-muted);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .section-title {
      font-size: 1.2rem;
    }
  }
</style>
