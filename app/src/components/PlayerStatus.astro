<div class="player-status" data-component="player-status" role="region" aria-label="訪問者統計">
  <div class="stats" role="group" aria-label="ページビュー統計">
    <div class="stat-box">
      <div class="stat-label" id="label-daily">TODAY</div>
      <div class="stat-value" data-daily="0" aria-labelledby="label-daily" aria-live="polite">0</div>
    </div>
    <div class="stat-box">
      <div class="stat-label" id="label-total">TOTAL</div>
      <div class="stat-value" data-total="0" aria-labelledby="label-total" aria-live="polite">0</div>
    </div>
    <div class="stat-box">
      <div class="stat-label" id="label-level">LEVEL</div>
      <div class="stat-value" data-level="0" aria-labelledby="label-level" aria-live="polite">0</div>
    </div>
  </div>

  <div class="exp-section">
    <div class="exp-label" id="label-exp">EXP</div>
    <div class="exp-bar" role="progressbar" aria-labelledby="label-exp" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
      <div class="exp-fill" data-exp-percent="0" style="width: 0%"></div>
    </div>
  </div>
</div>

<script>
  import { initPlayerStatus } from '../utils/playerStatusManager';
  initPlayerStatus();
</script>

<style>
  .player-status {
    background: var(--color-background);
    color: var(--color-text);
    border: var(--border-medium);
    padding: 8px 12px;
    font-family: var(--font-mono);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: 8px;
    width: fit-content;
  }

  .status-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .player-info {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .player-icon {
    font-size: 1.2rem;
  }

  .player-label {
    font-size: 0.65rem;
    font-weight: bold;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    margin-bottom: 0.2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .player-name {
    font-weight: bold;
    font-size: 0.8rem;
    color: var(--color-text);
  }

  .stats {
    display: flex;
    gap: 8px;
  }

  .stat-box {
    border: var(--border-thin);
    padding: 3px 6px;
    text-align: center;
    background: #f5f5f5;
  }

  .stat-label {
    font-size: 0.6rem;
    color: var(--color-text-muted);
    font-weight: bold;
  }

  .stat-value {
    font-size: 0.8rem;
    font-weight: bold;
    color: #000;
  }

  .exp-section {
    display: flex;
    align-items: center;
    gap: 6px;
    white-space: nowrap;
  }

  .exp-label {
    font-size: 0.65rem;
    font-weight: bold;
    color: var(--color-text-muted);
    min-width: 30px;
  }

  .exp-bar {
    width: 120px;
    height: 12px;
    border: var(--border-thin);
    background: #f5f5f5;
    position: relative;
  }

  .exp-fill {
    height: 100%;
    background: var(--color-link);
    transition: width 0.3s;
  }

  @media (max-width: 600px) {
    .player-status {
      width: 100%;
    }

    .status-header {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .exp-section {
      width: 100%;
      white-space: normal;
    }

    .exp-bar {
      flex: 1;
      min-width: 100px;
    }
  }
</style>
